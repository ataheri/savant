    <!-- Begin Flashlight -->
    <theme name="flashlight" description="Flashlight" view-ui="flashlight">
        <view-ui name="flashlight">
            <property name="titlebar-ui" value="flashlight"/>
        </view-ui>
	
        <!-- List the various titlebars that are available -->
        <titlebar-ui name="flashlight" extends="eclipse2">
            <property name="icon-map" value="flashlight" />
            <property name="icon.insets" value="0,0,0,4" handler="insets"/>
            <property name="default.height" value="15"/>
            <property name="font.color.active" value="#FFFFFF" handler="color"/>	
            <property name="border" value="#B9B9B9" handler="rounded-border"/>
            <property name="border.active" value="#2471C9" handler="rounded-border"/>
            <property name="painter" value="flashlight" handler="paint"/> 
            <property name="insets" value="0,0,2,0" handler="insets"/>
        </titlebar-ui>
		
        <painter-resource name="flashlight">
            <property name="classname" value="org.flexdock.plaf.theme.officexp.OfficeXPPainter"/>
            <property name="bgcolor" value="#F0EEF3" handler="color"/>
            <property name="bgcolor.active" value="#025FE4" handler="color"/>
            <property name="gradient.color" value="#CFCFCF" handler="color"/>
            <property name="gradient.color.active" value="#2A83EA" handler="color"/>
        </painter-resource>		
        <!-- List the available icon maps -->	
        <icon-map name="flashlight">
            <property name="close" value="flashlight.close" />
            <property name="pin" value="flashlight.pin" />
        </icon-map>
		
        <!-- List available icons -->
        <icon-resource name="flashlight.close" extends="default.close">
            <property name="default" value="debut/images/close_black.png" />
            <property name="active" value="debut/images/close_white.png" />
        </icon-resource>
        <icon-resource name="flashlight.pin" extends="default.pin">
            <property name="default" value="debut/images/pin_black.png" />
            <property name="active" value="debut/images/pin_white.png" />
        </icon-resource>
    </theme>
    <!-- End Flashlight -->

</flexview-themes>