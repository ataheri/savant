<shortcuts>
  <skipIfNotSupported/>
  <lateShortcutInstall/>
  <programGroup defaultName="$APP_NAME" location="applications"/>
  <shortcut
    name="$APP_NAME $APP_VER"
    description="Starts $APP_NAME $APP_VER"

    target="bash"
    workingDirectory="$INSTALL_PATH"
    commandLine="&quot;$INSTALL_PATH/savant.sh&quot;"
    iconFile="$INSTALL_PATH/savant.png"

    programGroup="yes"
    desktop="yes"

    type="Application"
    terminal="false"
    encoding="UTF-8"
    categories="Science;Biology;Bioinformatics;DataVisualization;Java;"
    createForAll="true"/>
  <shortcut
    name="Documentation"
    description="Read the Savant Documentation online"

    target="xdg-open"
    commandLine="http://genomesavant.com/p/savant/learn"
    url="http://genomesavant.com/p/savant/learn"
    iconFile="$INSTALL_PATH/savant.png"

    programGroup="yes"

    type="Application"
    terminal="false"
    encoding="UTF-8"
    createForAll="true"/>
  <shortcut
    name="Uninstall $APP_NAME $APP_VER"
    description="Uninstall $APP_NAME $APP_VER"

    target="java"
    workingDirectory="$INSTALL_PATH/Uninstaller/"
    commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
    iconFile="$INSTALL_PATH/uninstall_savant.png"

    programGroup="yes"

    type="Application"
    terminal="false"
    encoding="UTF-8"/>
</shortcuts>
